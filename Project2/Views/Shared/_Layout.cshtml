        a:link {
            color: darkblue;
            background-color: transparent;
            text-decoration: none;
        }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <div style="color: white;text-align:center; border: 50px solid #000080; background-color: #000080" class="mynav_navbar">
        <a  @Html.ActionLink("Home", "Index", "Home", null, new { style = "color:white" })</a>
        <a  @Html.ActionLink("About Us", "About", "Home", null, new { style = "color:white" })</a>
        <a  @Html.ActionLink("Contact Us", "Contact", "Home", null, new { style = "color:white" })</a>
        <a style="margin-left: 1100px"></a>
        <div class="mynav_dropdown">
            <button class="mynav_dropbtn">
                Register
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="mynav_dropdown-content">
                <a @Html.ActionLink("Student", "Register", "Account", null, new { style = "color:#000080" })</a>
                <a @Html.ActionLink("Employee", "ERegister", "Account", null, new { style = "color:#000080" })</a>
            </div>
        </div>
        <a> @Html.ActionLink("Login", "Login", "Account", null, new { style = "color:white" }) </a>
       
    </div>
    <h2 style="color: darkblue;text-align:center; font-size: 50px"> Hostel Management System</h2>

    <div>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

