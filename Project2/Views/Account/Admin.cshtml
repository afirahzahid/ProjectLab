@model Project2.Models.dbLogin

@{
    ViewBag.Title = "Admin";
}

<h4 style="color: darkblue; text-align: center; font-size: 30px">Admin</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" style="color: black; text-align: center; font-size: 17px">
            @Html.LabelFor(model => model.LoginEmail, htmlAttributes: new { @class = "control-label col-md-2",  style = "font-size:20px" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LoginEmail, new { htmlAttributes = new { @class = "form-control", style = "width: 260px ; height:30px" } })
                @Html.ValidationMessageFor(model => model.LoginEmail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div> </div>
        <div class="form-group" style="color: black; text-align: center; font-size: 17px">
            @Html.LabelFor(model => model.LoginPass, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:20px" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LoginPass, new { htmlAttributes = new { @class = "form-control", style = "width: 260px ; height:30px" } })
                @Html.ValidationMessageFor(model => model.LoginPass, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <div class="form-group" style="color: darkblue;  text-align: center; font-size: 50px">
            <div class="col-md-offset-2 col-md-10">
                <input style = "font-size:20px ;background-color:darkblue; color: white ;width: 140px ; height:40px" type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
}
